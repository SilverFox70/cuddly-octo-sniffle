<h1>Add a new item</h1>
<%= form_for :item, url: items_path do |f| %>
<p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :price %><br>
  $<%= f.text_field :price %>
</p>
<p>
  <%= f.label :quantity %><br>
  <%= f.text_field :quantity %>
</p>
<p>
  <%= f.label :picture_url %><br>
  <%= f.text_field :picture_url %>
</p>
<p>
  <%= f.label :upc %><br>
  <%= f.text_field :upc %>
</p>
<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.submit %><br>
</p>
<% end %>
